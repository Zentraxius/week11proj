@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Treat>;
  
<h1>Treats</h1>
@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet! Get out there and build!</h3>
} 
@foreach (Treat Treat in Model)
{
  <li>@Html.ActionLink($"{Treat.Name}", "Details", new { id = Treat.TreatId })</li>
}
<p>@Html.ActionLink("Add new Treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>