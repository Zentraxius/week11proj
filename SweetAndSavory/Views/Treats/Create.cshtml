@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h3>Add a new Treat:</h3>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  @Html.Label("Add Flavor to Treat:")
  @Html.DropDownList("FlavorId")
<input type="submit" value="Create Treat" class="btn" />
}
