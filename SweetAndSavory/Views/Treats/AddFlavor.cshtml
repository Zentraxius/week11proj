@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h2>Add a Treat</h2>

<h4>Add a Treat of this or these flavors: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select Treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>